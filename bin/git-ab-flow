#!/usr/bin/env bash
set -o errexit
set -o pipefail

echo "Needs push to upstream and/or pull request:"
git for-each-branch git ab --ahead '{local}' '{remote}' origin/develop

echo "Needs \`git pull\` from upstream:"
git for-each-branch git ab --behind '{local}' '{remote}'

echo "Needs \`git pull\` from origin/develop:"
git for-each-branch git ab --behind '{local}' 'origin/develop'
