#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

# h/t https://stackoverflow.com/questions/20433867/git-ahead-behind-info-between-master-and-branch

if (( ! $# )) ; then
    git rev-list --right-only --count master...origin/master
else
    git rev-list --right-only --count "$@"
fi
