#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

MAIN () {
    local width=32
    local prefix1=''
    local prefix2=''
    local green=$'\e'"[0;32m"
    local reset=$'\e'"[0m"
    local nopager=''
    local pipe=''
    while (( $# )) && [[ "$1" == -* ]] ; do
        case "$1" in
            -w*)
                width="${1#-w}"
                ;;
            --width=*)
                width="${1#*=}"
                ;;
            -p*)
                prefix1="${1#-p}"
                prefix2="${1#-p}"
                ;;
            --prefix=*)
                prefix1="${1#*=}"
                prefix2="${1#*=}"
                ;;
            --no-pager)
                nopager='--no-pager'
                ;;
            -P|--pipe)
                shift
                if (( $# < 1 )) ; then >&2 echo "-P/--pipe requires an argument"; exit 1; fi
                pipe="$1"
                ;;
            -P*)
                pipe="${1#-p}"
                ;;
            --pipe=*)
                pipe="${1#--pipe=}"
                ;;
            *)
                >&2 echo "unknown option: $1"
                exit 1
                ;;
        esac
        shift
    done
    if [[ "${prefix1}" != "" ]] ; then
        prefix1="${green}$(printf "%-${width}s" "${prefix1}")${reset}"
        prefix2="${green}$(printf "%-${width}s" "${prefix2}")${reset}"
    fi
    if (( $# )) ; then
        cd "$1"
        shift
        if [[ -z "${prefix1}" ]] && [[ -z "${prefix2}" ]] ; then
            P git $nopager "$@"
        else
            P git $nopager -c color.ui=always "$@" | sed -E -e "1{s#^#${prefix1}#g;n;}" -e "s#^#${prefix2}#g"
        fi
    else
        >&2 echo "no directory specified"
        exit 1
    fi
}

P () {
    if [[ -n "${pipe}" ]] ; then
        "$@" | $pipe
    else
        "$@"
    fi
}

X () {
    >&2 echo "${@@Q}"
    "$@"
}

#------------------------------------------------------------------------------
MAIN "$@"
